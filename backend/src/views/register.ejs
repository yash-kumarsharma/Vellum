<% layout('layouts/main', { title: 'Register' }) %>
<div class="max-w-md mx-auto mt-20 bg-white shadow p-6 rounded">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Register</h2>
  <form action="/register" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Full Name" class="border p-3 w-full rounded" required>
    <input type="email" name="email" placeholder="Email" class="border p-3 w-full rounded" required>
    <input type="password" name="password" placeholder="Password" class="border p-3 w-full rounded" required>
    <button type="submit" class="w-full bg-green-500 text-white py-3 rounded hover:bg-green-600 transition">Register</button>
  </form>
</div>
