generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  forms         Form[]
  collaborations Collaborator[]
  createdAt     DateTime @default(now())
}

model Form {
  id        String   @id @default(uuid())
  title       String
  description String?
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  isPublic  Boolean  @default(true)
  questions     Question[]
  responses     Response[]
  collaborators Collaborator[]
  createdAt     DateTime @default(now())
  deletedAt     DateTime?

  @@index([ownerId])
  @@index([createdAt(sort: Desc)])
  @@index([isPublic])
}

enum QuestionType {
  TEXT
  MULTIPLE_CHOICE
  CHECKBOX
  DROPDOWN
  DATE
}

model Question {
  id        String       @id @default(uuid())
  formId    String
  form      Form         @relation(fields: [formId], references: [id], onDelete: Cascade)
  type      QuestionType
  label     String
  options   Json?
  required  Boolean      @default(false)
  order     Int
  createdAt DateTime     @default(now())

  @@index([formId])
  @@index([order])
}

model Response {
  id        String   @id @default(uuid())
  formId    String
  form      Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  answers   Json
  createdAt DateTime @default(now())

  @@index([formId])
  @@index([createdAt(sort: Desc)])
}

enum CollaboratorRole {
  OWNER
  EDITOR
  VIEWER
}

model Collaborator {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  formId    String
  form      Form             @relation(fields: [formId], references: [id], onDelete: Cascade)
  role      CollaboratorRole

  @@index([userId])
  @@index([formId])
}
